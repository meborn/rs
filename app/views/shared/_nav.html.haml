%nav.navbar.navbar-inverse.navbar-static-top
	.container
		.navbar-header
			%button.navbar-toggle.collapsed{type: 'button', data:{toggle: 'collapse', target:'#rs-collapse'}}
				%span.sr-only
					='Toggle Navigation'
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar
			=link_to 'Brink Industries', root_url, class: 'navbar-brand'
		.collapse.navbar-collapse#rs-collapse
			%ul.nav.navbar-nav.navbar-right
				- if admin_signed_in?
					%li.dropdown
						= link_to root_path, {class: 'dropdown-toggle', data:{toggle: 'dropdown'}, role: 'button', aria:{haspopup:'true', expanded: false}}do
							Pages
							%span.caret
						%ul.dropdown-menu
							%li= link_to 'Home', static_index_path
							%li= link_to 'About', static_about_path
							%li= link_to 'Contact', static_contact_path
					%li= link_to 'Products', admin_products_path
					%li= link_to 'Testimonials', admin_testimonials_path
					%li= link_to 'Videos', admin_videos_path
					%li.dropdown
						= link_to root_path, {class: 'dropdown-toggle', data:{toggle: 'dropdown'}, role: 'button', aria:{haspopup:'true', expanded: false}}do
							%span.glyphicon.glyphicon-user
							%span.caret
						%ul.dropdown-menu
							%li= link_to 'Sign In',  new_admin_session_path
							%li= link_to 'Sign Out', destroy_admin_session_path, method: :delete
				-else
					%li= link_to 'Home', root_url
					%li= link_to 'About', static_about_path
					%li= link_to 'Products', products_path
					%li= link_to 'Contact', static_contact_path
