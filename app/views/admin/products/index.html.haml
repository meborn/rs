.container
	.row.rs-row
		.col-xs-12
			%h1 Products
			.panel.panel-default
				.panel-heading.text-right
					=link_to "+ New Product", new_admin_product_path
				.panel-body
					%table.table
						%thead
							%tr
								%th
								%th Title
								%th Price
								%th View
								%th Edit
								%th Delete
						%tbody
							-@products.each do |p|
								%tr
									%td.admin-product-image-td
										= image_tag p.product_images[0].image, class: 'img-responsive admin-product-image'
									%td= p.title
									%td= p.price
									%td
										=link_to admin_product_path(p) do
											%span.glyphicon.glyphicon-eye-open
									%td
										=link_to edit_admin_product_path(p) do
											%span.glyphicon.glyphicon-pencil
									%td
										=link_to admin_product_path(p), method: :delete do
											%span.glyphicon.glyphicon-trash