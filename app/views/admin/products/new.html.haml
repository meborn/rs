.container
	.row.rs-row
		.col-xs-12
			.panel.panel-default
				.panel-heading
					%h1.panel-title
						="New Product"
				.panel-body
					=form_for [:admin, @product] do |f|
						.form-group
							=f.label :title
							=f.text_field :title, {class: 'form-control'}

						.form-group
							=f.label :price
							=f.text_field :price, {class: 'form-control'}
						.form-group
							=f.label :description
							=f.text_area :description, {class: 'form-control'}
						=f.submit class: 'btn btn-default'

	
	
	
